@model test5.Models.MembreElem

@{
    ViewBag.Title = "AddPartner";
}

<h2>AddPartner</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>MembreElem</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.projektID)
    <div class="form-group">
        @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">

            @Html.TextBoxFor(model => model.email, new { @readonly = "readonly", id = "txt" })
            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            @Html.DropDownListFor(Model => Model.email, ViewBag.Statut as SelectList, "select", new { @onChange = "selectedtext(this)" })


        </div>
    </div>

   

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
<h2>Log</h2>
<textarea class="form-control" readonly
          id="Description"
          name="Description"
          rows="25"
          cols="20"> 
@foreach (var item in ViewBag.Log)
{
@item 
    
}
</textarea>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
        function selectedtext(idditem) {
            var selvalue = idditem.value;
            var seltext = idditem.options[idditem.selectedIndex].innerHTML;
            $('#txt').val(seltext)
        }

</script>
