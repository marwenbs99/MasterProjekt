@model IEnumerable<string>

@{
    ViewBag.Title = "Projekt erstellen";
}



<h2>Projekt erstellen</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h6>Create your new project</h6>
        <hr />
        <div class="form-group">
            <label for="Name">name of the project:</label>
            <div class="col-md-10">
                <input type="text" name="name" class="form-control" id="exampleInputEmail1" placeholder="The Name of your Project">
            </div>
        </div>

        <div class="form-group">
            <label for="Name">Description:</label>
            <div class="col-md-10">
                <input type="text" name="description" class="form-control" id="exampleInputEmail1" placeholder="The Description of your Project">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">

                <div class="dropdown">
                    <button class="btn btn-info dropdown-toggle" type="button" style="width:230px;" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Add your partner
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (string userName in Model)
                        {
                            <li class="list-group-item list-group-item-primary">
                                <input class="form-check-input" type="checkbox" name="box_@userName" value="True">
                                <label class="form-check-label" for="inlineCheckbox1">@userName</label>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="erstellen" class="btn btn-info" style="width:230px;" />
            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to the project list ?", "Index", "Home")
</div>


<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Benutzer auswählen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul class="list-group list-group-flush">
                    @foreach (string userName in Model)
                    {
                        <div class="form-check form-check-inline">
                            <li class="list-group-item">@userName</li>
                            <input class="form-check-input" type="checkbox" name="box_@userName" value="option1">
                            <label class="form-check-label" for="inlineCheckbox1"></label>
                        </div>
                    }
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" style="width:230px;" data-dismiss="modal"  aria-label="Close">
                    Bestätigen
                </button>
            </div>
        </div>
    </div>
</div>